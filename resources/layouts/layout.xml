<layout id="WatchFace">
    <drawable class="Background" />

	<label id="TimeHour" x="45%" y="center" font="Graphics.FONT_NUMBER_THAI_HOT" justification="Graphics.TEXT_JUSTIFY_RIGHT" color="Graphics.COLOR_WHITE"/>
	<label id="TimeSeparator" x="center" y="42%" font="Graphics.FONT_NUMBER_MILD" justification="Graphics.TEXT_JUSTIFY_RIGHT" color="Graphics.COLOR_WHITE"/>
	<label id="TimeMinutes" x="52%" y="42%" font="Graphics.FONT_NUMBER_MILD" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_LT_GRAY"/>

	<label id="Date" x="52%" y="38%" font="Graphics.FONT_SYSTEM_XTINY" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_WHITE"/>

	<drawable id="DataField1" class="DataField">
		<param name="dataType">DataField.DATA_FIELD_SUN</param>
		<param name="posX">"18%"</param>
		<param name="posY">"19%"</param>
	</drawable>
	<drawable id="DataField2" class="DataField">
		<param name="dataType">DataField.DATA_FIELD_BATTERY</param>
		<param name="posX">"18%"</param>
		<param name="posY">"27%"</param>
	</drawable>
	
	<label id="BluetoothIcon" x="74%" y="40%" font="@Fonts.CustomFont" color="Graphics.COLOR_BLUE" text="~"/>
	<label id="DNDIcon" x="74%" y="50%" font="@Fonts.CustomFont" color="Graphics.COLOR_BLUE" text=";"/>
	<label id="NotificationsIcon" x="80%" y="40%" font="@Fonts.CustomFont" color="Graphics.COLOR_BLUE" text="]"/>
	<label id="HeartIcon" x="80%" y="50%" font="@Fonts.CustomFont" color="Graphics.COLOR_BLUE" text="="/>


	<drawable id="DataField3" class="DataField">
		<param name="dataType">DataField.DATA_FIELD_CALORIES</param>
		<param name="posX">"65%"</param>
		<param name="posY">"65%"</param>
		<param name="iconAlignment">DataField.ICON_ALIGNMENT_RIGHT</param>
	</drawable>
	<drawable id="DataField4" class="DataField">
		<param name="dataType">DataField.DATA_FIELD_FLOORS</param>
		<param name="posX">"65%"</param>
		<param name="posY">"71%"</param>
		<param name="iconAlignment">DataField.ICON_ALIGNMENT_RIGHT</param>
	</drawable>

</layout>